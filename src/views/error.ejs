<%- include("layout/default-head", { title: "Image Processor | Error",
stylesFile: "", scriptFile: "error" }) %>

<main class="container">
  <h1 class="center-text">Something went wrong</h1>

  <h2 class="center-text" x-show="statusCode">
    <%= statusCode %> <%= statusMessage %>
  </h2>

  <p class="center-text large-text"><%= message %></p>

  <% if (stack) { %>
  <pre><code><%= stack %></code></pre>
  <% } %>

  <p class="center-text">
    <a href="/" class="button button-primary">Go back home</a>
  </p>
</main>

<%- include("layout/default-footer") %>
